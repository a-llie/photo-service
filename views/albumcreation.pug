script(type='module').
  import Sortable from 'https://cdn.jsdelivr.net/npm/@shopify/draggable/build/esm/Sortable/Sortable.mjs';
  const sortable = new Sortable(document.querySelectorAll('ul'), {
  draggable: 'li',
  });
  sortable.on('sortable:stop', () => sendReorderedArray());